.transfer-notice {
  text-align: left !important;
  max-width: 500px !important;
}

.transfer-swap-container {
  justify-content: flex-start !important;
  padding-left: 2rem !important;
  margin: -0.5rem 0 !important;
}

.btn-swap-accounts {
  width: 36px !important;
  height: 36px !important;
}

/* Sophisticated Settings Page */
.settings-page-container {
  background: var(--bg);
  min-height: 100vh;
  display: flex;
  font-family: 'Inter', sans-serif;
}

.settings-sidebar {
  width: 280px;
  border-right: 1px solid var(--border);
  padding: 2.5rem 1.5rem;
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.settings-nav-item {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.75rem 1rem;
  border-radius: 10px;
  color: var(--text-muted);
  font-size: 0.9375rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s;
  background: transparent;
  border: none;
  width: 100%;
  text-align: left;
}

.settings-nav-item:hover {
  background: var(--bg-secondary);
  color: var(--text-main);
}

.settings-nav-item.active {
  background: rgba(34, 197, 94, 0.1);
  color: var(--color-success);
}

.settings-main {
  flex: 1;
  padding: 3rem 5rem;
  max-width: 1000px;
}

.settings-header {
  margin-bottom: 3.5rem;
}

.settings-header h1 {
  font-size: 2rem;
  font-weight: 800;
  color: var(--text-main);
  letter-spacing: -0.02em;
  margin-bottom: 0.5rem;
}

.settings-header p {
  font-size: 1rem;
  color: var(--text-muted);
  font-weight: 500;
}

.settings-section {
  margin-bottom: 5rem;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.settings-section-title {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 2rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid var(--border);
}

.settings-form-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1.5rem;
}

.settings-field {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.settings-field label {
  font-size: 0.75rem;
  font-weight: 800;
  color: #94A3B8;
  letter-spacing: 0.05em;
  text-transform: uppercase;
}

.settings-input,
.settings-select {
  padding: 0.75rem 1rem;
  border: 1px solid var(--border);
  border-radius: 10px;
  font-size: 0.9375rem;
  color: var(--text-main);
  transition: all 0.2s;
  background: var(--bg-secondary);
}

.settings-input:focus,
.settings-select:focus {
  border-color: #00E676;
  outline: none;
  box-shadow: 0 0 0 3px rgba(0, 230, 118, 0.1);
}

.btn-settings-save {
  margin-top: 2rem;
  padding: 0.75rem 2rem;
  background: var(--primary);
  color: white;
  border: none;
  border-radius: 10px;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.2s;
}

.btn-settings-save:hover {
  background: #333;
  transform: translateY(-1px);
}

/* Switches & Controls */
.settings-control-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 0;
  border-bottom: 1px solid var(--border);
}

.control-info h4 {
  font-size: 0.9375rem;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 0.25rem;
}

.control-info p {
  font-size: 0.8125rem;
  color: var(--text-muted);
}

/* Minimalist List for Accounts/Categories */
.settings-list {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.settings-list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 1.25rem;
  background: var(--bg-secondary);
  border-radius: 12px;
  border: 1px solid transparent;
  transition: all 0.2s;
}

.settings-list-item:hover {
  background: white;
  border-color: #E2E8F0;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.02);
}

.item-main-info {
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 0.9375rem;
  font-weight: 700;
  color: var(--text-main);
}

.item-sub {
  font-size: 0.8125rem;
  color: var(--text-muted);
}

.item-actions-minimal {
  display: flex;
  gap: 0.5rem;
}

.btn-action-minimal {
  padding: 0.5rem;
  color: #94A3B8;
  background: transparent;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.2s;
}

.btn-action-minimal:hover {
  color: #1A1D1F;
  background: #F1F5F9;
}

.btn-action-minimal.danger:hover {
  color: var(--color-danger);
  background: rgba(239, 68, 68, 0.1);
}

.btn-add-minimal {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 0;
  color: var(--primary);
  font-size: 0.875rem;
  font-weight: 700;
  background: transparent;
  border: none;
  cursor: pointer;
}

/* Toggles */
.switch {
  position: relative;
  display: inline-block;
  width: 44px;
  height: 24px;
}

.switch input {
  opacity: 0;
  width: 0;
  height: 0;
}

.slider {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--border);
  transition: .4s;
  border-radius: 24px;
}

.slider:before {
  position: absolute;
  content: "";
  height: 18px;
  width: 18px;
  left: 3px;
  bottom: 3px;
  background-color: white;
  transition: .4s;
  border-radius: 50%;
}

input:checked+.slider {
  background-color: #00E676;
}

input:focus+.slider {
  box-shadow: 0 0 1px #00E676;
}

input:checked+.slider:before {
  transform: translateX(20px);
}

/* Appearance Options */
.appearance-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1.5rem;
}

.appearance-card {
  border: 2px solid var(--border);
  border-radius: 12px;
  padding: 1rem;
  cursor: pointer;
  transition: all 0.2s;
  text-align: center;
}

.appearance-card:hover {
  border-color: #E2E8F0;
}

.appearance-card.active {
  border-color: #00E676;
  background: #F0F9FF;
}

.visual-preview {
  height: 90px;
  border-radius: 12px;
  margin-bottom: 0.75rem;
  border: 2px solid transparent;
  overflow: hidden;
  position: relative;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

.appearance-card.active .visual-preview {
  border-color: var(--primary);
  box-shadow: 0 0 0 2px rgba(16, 185, 129, 0.1);
}

.appearance-card.active span {
  color: var(--primary);
  font-weight: 700;
}

.appearance-card span {
  font-size: 0.9rem;
  font-weight: 500;
  color: var(--text-muted);
}

/* Preview Content Simulation */
.preview-header {
  height: 20%;
  width: 100%;
  opacity: 0.3;
}

.preview-body {
  padding: 10px;
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.preview-line {
  height: 4px;
  width: 80%;
  border-radius: 2px;
  opacity: 0.2;
}

.preview-line.short {
  width: 50%;
}

/* Light Theme Preview */
.light-preview {
  background-color: #F8FAFC;
}

.light-preview .preview-header {
  background-color: #E2E8F0;
}

.light-preview .preview-line {
  background-color: #64748B;
}

/* Dark Theme Preview */
.dark-preview {
  background-color: #0F172A;
}

.dark-preview .preview-header {
  background-color: #1E293B;
}

.dark-preview .preview-line {
  background-color: #E5E7EB;
}

/* System Theme Preview */
.system-preview {
  background: linear-gradient(135deg, #F8FAFC 50%, #0F172A 50%);
}

.system-preview .preview-header {
  background-color: #CBD5E1;
}

.system-preview .preview-line {
  background-color: var(--text-muted);
}

/* Global Scrollbar Refinement */
::-webkit-scrollbar {
  width: 10px;
  height: 10px;
}

::-webkit-scrollbar-track {
  background: var(--bg-primary);
}

::-webkit-scrollbar-thumb {
  background: var(--border-color);
  border-radius: 5px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--text-muted);
}

.dark ::-webkit-scrollbar-thumb {
  background: #334155;
}

.dark ::-webkit-scrollbar-thumb:hover {
  background: #475569;
}
