  .reports-page-container {
    padding: 0 !important;
    margin: 0 !important;
  }

  .reports-header {
    margin-bottom: 1cm !important;
  }

  .reports-title {
    font-size: 1.15rem !important;
  }

  .report-section {
    margin-bottom: 1cm !important;
  }

  .section-num-title {
    margin-bottom: 0.4cm !important;
    font-size: 0.6rem !important;
  }

  .report-list {
    gap: 0.35cm !important;
  }

  .item-label {
